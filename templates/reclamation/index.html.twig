{% extends 'base.html.twig' %}
{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">ID utilisateur</th>
            <th scope="col">contenu</th>
            <th scope="col">type</th>
            <th scope="col">etat</th>
            <th scope="col">image</th>
            <th scope="col">traite</th>
            <th scope="col">Valider</th>
            <th scope="col">Supprimer</th>

        </tr>
        </thead>
        <tbody>
        {% for s in rec %}
            <tr>
                <th scope="row">{{ s.id }}</th>
                <td>{{ s.ID_U }}</td>
                <td>{{ s.Contenu }}</td>
                <td>{{ s.Type }}</td>
                <td>{{ s.etat }}</td>
                <td><img src="{{ asset('Uploads/image/' ~ s.image) }}" width="500" alt="{{ s.Contenu }}">
                    </td>
                <td>{{ s.traite }}</td>
                <td><a href="{{ path('update',{'id':s.id})}}">update</a></td>
                <td><a href="{{ path('d',{'id':s.id})}}">Supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
